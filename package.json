{
    "name": "pdsc-eaf-viewer",
    "version": "1.5.0",
    "description": "A tool to report on the content of EAF files",
    "main": "index.js",
    "scripts": {
        "develop": "electron-webpack dev",
        "compile": "electron-webpack",
        "dist": "npm run compile && electron-builder",
        "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
        "server": "npm install && node_modules/gulp/bin/gulp.js develop",
        "test": "gulp test",
        "build:mac": "electron-webpack && electron-builder --mac --publish always",
        "build:linux": "electron-webpack && electron-builder --linux --publish always",
        "build:win": "./bin/build-windows.sh",
        "publish": "electron-builder --publish always"
    },
    "build": {
        "afterSign": "bin/notarize.js",
        "appId": "au.org.paradisec.eaf-viewer",
        "productName": "EAF Viewer",
        "copyright": "Copyright Â© 2020 PARADISEC",
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "./mac.plist",
            "entitlementsInherit": "./mac.plist",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "sign": false
        },
        "win": {},
        "linux": {
            "target": "tar.bz2"
        },
        "publish": [
            "github"
        ]
    },
    "electronWebpack": {
        "renderer": {
            "webpackConfig": "webpack.extra-config.js"
        }
    },
    "author": "Marco La Rosa",
    "license": "GPLv3",
    "bugs": {
        "url": "https://github.com/CoEDL/eaf-viewer/issues"
    },
    "homepage": "https://github.com/CoEDL/eaf-viewer#readme",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.13.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.28",
        "@observablehq/stdlib": "^3.2.1",
        "core-js": "^3.4.0",
        "d3": "^5.12.0",
        "element-ui": "^2.12.0",
        "jsdom": "^16.2.2",
        "lodash": "^4.17.15",
        "regenerator-runtime": "^0.13.3",
        "source-map-support": "^0.5.16",
        "tailwindcss": "^1.1.3",
        "vue": "^2.6.11",
        "vue-router": "^3.3.1",
        "vue-scrollto": "^2.18.1",
        "vuex": "^3.4.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.1",
        "@babel/core": "^7.10.1",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-env": "^7.10.1",
        "autoprefixer": "^9.8.0",
        "babel-loader": "^8.1.0",
        "chai": "^4.2.0",
        "clean-webpack-plugin": "^3.0.0",
        "connect-history-api-fallback": "^1.6.0",
        "css-loader": "^3.5.3",
        "electron": "^9.0.0",
        "electron-builder": "^22.7.0",
        "electron-notarize": "^0.3.0",
        "electron-updater": "^4.3.1",
        "electron-webpack": "^2.8.2",
        "electron-webpack-vue": "^2.4.0",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.3.0",
        "jsdom-global": "^3.0.2",
        "koa-connect": "^2.0.1",
        "mini-css-extract-plugin": "^0.9.0",
        "mocha": "^7.2.0",
        "node-sass": "^4.14.1",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "raw-loader": "^4.0.1",
        "sass-loader": "^8.0.2",
        "terser-webpack-plugin": "^3.0.2",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "vue-loader": "^15.9.2",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.6.11",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0"
    }
}
